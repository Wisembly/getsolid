#!/usr/bin/env node

var fs = require('fs'),
    hbs = require('handlebars').create();

hbs.registerHelper('_t', function $(msgid) {
  return new hbs.SafeString(msgid);
});

fs.writeFileSync('app/index.html', hbs.compile(fs.readFileSync('app/index.hbs').toString())());
fs.writeFileSync('app/getting-started.html', hbs.compile(fs.readFileSync('app/getting-started.hbs').toString())());
fs.writeFileSync('app/product-hunt.html', hbs.compile(fs.readFileSync('app/product-hunt.hbs').toString())());
